# =================================
# Student Management System - Environment Variables
# =================================
# Copy this file to .env and modify values as needed

# =================================
# Database Configuration  
# =================================
# For Local Development (backend outside Docker, database in Docker):
DATABASE_URL=postgresql://postgres:password@localhost:5432/student_management

# For Full Docker Development (all services in Docker):
# DATABASE_URL=postgresql://postgres:password@db:5432/student_management

# Database credentials (used by docker-compose.yml)
POSTGRES_DB=student_management
POSTGRES_USER=postgres  
POSTGRES_PASSWORD=password

# =================================
# Development vs Production
# =================================
# Currently not used in code, but ready for future use
ENVIRONMENT=development

# =================================
# Frontend Configuration
# =================================  
# API endpoint for frontend to connect to backend
# For local development:
REACT_APP_API_URL=http://localhost:8000
# For production, change to your actual backend URL 